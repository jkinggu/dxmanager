// 自动填充开票号码
function gainTicketnum() {
	var ticket = null;
	$.ajax({
		type : "post",
		url : "ticket/selectWillUseTicket.dx",
		dataType : "json",
		async : false,
		success : function(msg) {
			if (msg != "" && msg != null) {
				ticket = msg;
			} else {
				layer.alert('发票已用尽!请谨慎开票');
			}

		},
		error : function() {
			layer.alert('自动获取开票号码失败,可手动填写!');
		}
	});
	return ticket;
}

