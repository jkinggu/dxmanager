<%@ page language="java" import="java.util.*" pageEncoding="utf-8"%>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://" + request.getServerName() + ":" + request.getServerPort()
			+ path + "/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<base href="<%=basePath%>">
<meta charset="utf-8">
<meta name="viewport"
	content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<title>销售管理</title>
<link rel="stylesheet" href="plugins/layui/css/layui.css">
<script src="${pageContext.request.contextPath}/js/jquery-1.11.0.min.js"></script>
<style>
body {
	margin: 10px;
}

.demo-carousel {
	height: 200px;
	line-height: 200px;
	text-align: center;
}
</style>
</head>
<body>
	<table class="layui-hide" id="salesTable" lay-filter="salesC"></table>

	<script type="text/html" id="salesBar">
  <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
  <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
  <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
	<script type="text/html" id="credentionalsTemplet">

  <a href="javascript:checkCredentials('{{d.paycredentials}}');"  class="layui-table-link">
	<img style='width:60px;height:60px;'  src='{{d.paycredentials}}'lay-src='{{d.paycredentials}}' alt='无凭证'>
</a>


</script>
	<script src="<%=basePath%>/plugins/layui/layui.js"></script>
	<script src="<%=basePath%>/js/wdf/sales.js"></script> 

	<script>
	var dataTable;

		layui
				.use(
						[ 'form', 'laydate', 'layer', 'table', 'upload',
								'element' ],
						function() {
							var laydate = layui.laydate // 日期
							, layer = layui.layer // 弹层
							, table = layui.table // 表格
							, upload = layui.upload // 上传
							, element = layui.element // 元素操作
							// 执行一个 table 实例
							dataTable = table
									.render({
										elem : '#salesTable',
										//height : 530,
										url : 'sales/selectAllSales.dx',// 数据接口
										title : '销售信息详情表',
										//cellMinWidth : 70, //全局定义常规单元格的最小宽度
										//page : true,// 开启分页
										//toolbar : 'default', // 开启工具栏，此处显示默认图标，可以自定义模板
										id : 'idwdf03',
										limits : [ 5, 10, 20, 30, 40, 50 ],
										limit : 10, //每页默认显示的数量
										loading : true,
										cols : [ [ // 表头
												
												{
													field : 'salesid',
													title : 'ID',
													width : 50,
													sort : true,
												},
												{
													field : 'salesdate',
													title : '销售时间',
													sort : true,
													width : 105
												},
												{
													field : 'goods',
													templet : '<div>{{d.goods.goodsname}}</div>',
													title : '商品名称',
													width : 280
												},
												{
													field : 'amount',
													title : '总金额',
													width : 90
												},
												{
													field : 'receipt',
													title : '开票名称',
													width : 280
												},
												{
													field : 'linkman',
													title : '姓名'
												},
												{
													field : 'tel',
													title : '联系方式'
												},
												{
													field : 'email',
													title : '邮箱'
												},
												{
													field : 'ticketnum',
													title : '发票号码',
													width : 100
												},
												{
													field : 'payment',
													title : '支付方式',
													width : 90
												},
												{
													field : 'paycredentials',
													templet : "#credentionalsTemplet",
													title : '支付凭证',
													width : 90
												}, {
													field : 'note',
													title : '备注',
													fixed : 'right'
												} ] ],
												where:{
													customerid:window.parent.customer.customerid
												}
									});
							
							// 监听头工具栏事件
							table
									.on(
											'toolbar(salesC)',
											function(obj) {
												var checkStatus = table
														.checkStatus(obj.config.id), data = checkStatus.data; // 获取选中的数据
												switch (obj.event) {
												case 'add':
													aadSalesForm('新增销售记录');
													break;
												case 'update':
													if (data.length === 0) {
														layer.msg('请选择一行');
													} else if (data.length > 1) {
														layer.msg('只能同时编辑一个');
													} else {
														 newSalesid = data[0].salesid;
														newSalesdate = data[0].salesdate;
														newTicketnum = data[0].ticketnum;
														newGoodsid = data[0].goodsid;
														newReceipt = data[0].receipt;
														newCustomername = data[0].customer.customername;
														newAgent = data[0].linkman;
														newMobile = data[0].tel;
														newAmount = data[0].amount;
														newPayment = data[0].payment;
														newPaycredentials = data[0].paycredentials;
														newNote = data[0].note;
														aadSalesForm('更新销售信息',data);
														
													}
													break;
												case 'delete':
													if (data.length === 0) {
														layer.msg('请选择一行');
													} else {
														/* layer.msg('删除'); */
														layer
																.confirm(
																		'真的删除行么',
																		function(
																				index) {
																			obj
																					.del(); // 删除对应行（tr）的DOM结构
																			layer
																					.close(index);
																			// 向服务端发送删除指令
																		});
													}
													break;
												}
												;
											});

							// 监听行工具事件
							table.on('tool(salesC)', function(obj) { /* 注：tool 是工具条事件名，sales 是 table 原始容器的属性 lay-filter="对应的值" */
								var data = obj.data // 获得当前行数据
								, layEvent = obj.event; // 获得 lay-event 对应的值
								if (layEvent === 'detail') {
									layer.msg('查看操作');
								} else if (layEvent === 'del') {
									layer.confirm('真的删除行么', function(index) {
										obj.del(); // 删除对应行（tr）的DOM结构
										layer.close(index);
										// 向服务端发送删除指令
									});
								} else if (layEvent === 'edit') {
									layer.msg('编辑操作');
								}
							});
							//监听单元格编辑
							table.on('edit(salesC)', function(obj) {
								var value = obj.value //得到修改后的值
								, data = obj.data //得到所在行所有键值
								, field = obj.field; //得到字段
								layer.msg('[单位名称: ' + data.customername + '] '
										+ field + ' 字段更改为：' + value);
							});

						});
	</script>

</body>
</html>
