// js中数值位数不够自动补0
function PrefixInteger(num, length) {
	return (Array(length).join('0') + num).slice(-length);
}
// 获取子单位的最大单位编码
function selectSubCMaxCode(customer) {
	var ccode;
	$.ajax({
		type : 'post',
		data : {
			'membership' : customer.membership,
			'customercode' : customer.customercode
		},
		async:false,
		url : 'customer/selectSubCMaxCode.dx',
		success : function(result) {
			if(result==''){
				ccode = customer.customercode+'01';
			}else{
				str = result.substr(1,result.length-2);//stringObject.substr(start,length) 截取的是开始与字符串长度。
				ccode = PrefixInteger(Number(str) + 1, str.length);
			}
		},
		error : function(data,type, err) {
			layer.msg('网络异常，请重新操作', {
				icon : 5
			})
		}

	})
	return ccode;
}

