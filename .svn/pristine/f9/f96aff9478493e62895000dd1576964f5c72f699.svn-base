<%@ page language="java" import="java.util.*" pageEncoding="utf-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://" + request.getServerName() + ":" + request.getServerPort()
			+ path + "/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<base href="<%=basePath%>">
<meta charset="utf-8">
<meta name="viewport"
	content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<title>发票管理</title>
<link rel="stylesheet" href="<%=basePath%>/plugins/layui/css/layui.css">
<script src="${pageContext.request.contextPath}/js/jquery-1.11.0.min.js"></script>
<script src="<%=basePath%>/plugins/layui/layui.js"></script>
<script src="<%=basePath%>/js/wdf/ticket.js"></script>
<style>
body {
	margin: 10px;
}

.demo-carousel {
	height: 200px;
	line-height: 200px;
	text-align: center;
}
</style>

</head>
<body>

	<script src="<%=basePath%>/plugins/layui/layui.js"></script>

	<script type="text/javascript"
		src="<%=basePath%>/js/jquery-1.11.0.min.js"></script>
	<div class="layui-fluid" id="LAY-app-message">
		<div class="layui-card">
			<div class="layui-tab layui-tab-brief">
				<ul class="layui-tab-title">
					<li class="layui-this">发票号本</li>
					<li class="">异常票号</li>
				</ul>
				<div class="layui-tab-content">
					<div class="layui-tab-item layui-show">
						<blockquote class="layui-elem-quote news_search">
							<div class="layui-inline">
								<a class="layui-btn layui-btn-normal newsAdd_btn"
									href='javascript:aadTicketForm()'>新增</a>
							</div>
						</blockquote>
						<table class="layui-hide" id="ticketTable" lay-filter="ticket"></table>

					</div>

					<div class="layui-tab-item ">
						<blockquote class="layui-elem-quote news_search">
							<div class="layui-inline">
								<div class="layui-input-inline">
									<input placeholder="请输入交易日期" class="layui-input "
										id="transdateInput" lay-verify="date">
								</div>
								<a class="layui-btn  newsAdd_btn" data-type="reload"
									id="payment_search">搜索</a>
							</div>
						</blockquote>
						<table class="layui-hide" id="ticketExceptionTable"
							lay-filter="ticketException"></table>
					</div>


				</div>
			</div>
		</div>
	</div>
	<script type="text/html" id="ticketBar">
  <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
  <a class="layui-btn layui-btn-warm layui-btn-xs" lay-event="exception" title='异常处理'>异常</a>
  <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
	<script>
		layui.use([ 'form', 'laydate', 'layer', 'table', 'element' ],
				function() {
					var laydate = layui.laydate // 日期
					, layer = layui.layer // 弹层
					, element = layui.element // 元素操作
					;
					table = layui.table // 表格
					// 执行一个 ticketTable 实例
					table.render({
						elem : '#ticketTable',
						//height : 530,
						url : 'ticket/selectAllTicket.dx',// 数据接口
						title : '发票登记表',
						//cellMinWidth : 70, //全局定义常规单元格的最小宽度
						page : true,// 开启分页
						id : 'ticketTableId',
						limits : [ 5, 10, 20, 30, 40, 50 ],
						limit : 10, //每页默认显示的数量
						loading : true,
						cols : [ [ // 表头
						{
							type : 'checkbox',
							fixed : 'left'
						}, {
							field : 'tickettime',
							title : '日期',
							sort : true,
						}, {
							field : 'beginnum',
							title : '开始票号',
						},

						{
							field : 'ticketamount',
							title : '发票数量',
						}, {
							title : '操作',
							fixed : 'right',
							align : 'center',
							toolbar : '#ticketBar',
							width : 200
						} ] ]
					});

					// 执行一个 ticketExceptionTable 实例
					table.render({
						elem : '#ticketExceptionTable',
						//height : 530,
						url : 'ticketException/selectAllTicketException.dx',// 数据接口
						title : '异常发票信息表',
						page : true,// 开启分页
						id : 'ticketExceptionTableId',
						limits : [ 5, 10, 20, 30, 40, 50 ],
						limit : 10, //每页默认显示的数量
						loading : true,
						cols : [ [ // 表头
						{
							type : 'checkbox',
							fixed : 'left'
						}, {
							field : 'id',
							title : 'ID',
							width : 80
						}, {
							field : 'time',
							title : '处理日期'
						}, {
							field : 'ticketnum',
							title : '发票号码',
							sort : true
						}, {
							field : 'type',
							title : '异常处理'
						}, {
							field : 'note',
							title : '备注'
						} ] ]
					});

					// 监听行工具事件
					table.on('tool(ticket)', function(obj) {
						var data = obj.data // 获得当前行数据
						, layEvent = obj.event; // 获得 lay-event 对应的值
						if (layEvent === 'exception') {
							addTicketExceptionForm(data.ticketid);
						} else if (layEvent === 'del') {
							deleteTicket(obj);
						} else if (layEvent === 'edit') {
							editTicketPage(data);
						}
					});
				});
	</script>
</body>
</html>
